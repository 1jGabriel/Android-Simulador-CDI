<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_material_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/large_space</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="result_label_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="result_value_text_view">
        <item name="paddingStart">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
