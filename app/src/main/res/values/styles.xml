<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/large_space</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="HomeLabelTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/p2_text_size</item>
    </style>

    <style name="HomeInputEditTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:layout_marginLeft">@dimen/medium_space</item>
        <item name="android:layout_marginRight">@dimen/medium_space</item>
    </style>

    <style name="HomeSeparatorView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginLeft">@dimen/small_space</item>
        <item name="android:layout_marginRight">@dimen/small_space</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ResultLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResultValueTextView">
        <item name="paddingStart">@dimen/tiny_space</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
